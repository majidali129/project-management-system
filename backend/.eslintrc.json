{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "airbnb-base",
        "eslint:recommended",
        "plugin:node/recommended"
    ],
    "node/prefer-global/url-search-params": [
        "error",
        "always"
    ],
    "node/file-extension-in-import": [
        "error",
        {
            "ignorePackages": true
        }
    ],
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "plugins": [
        "prettier",
        "import"
    ],
    "rules": {
        "prettier/prettier": "error",
        "spaced-comment": "off",
        "no-console": "warn",
        "consistent-return": "off",
        "func-names": "off",
        "object-shorthand": "off",
        "no-process-exit": "off",
        "no-param-reassign": "off",
        "no-return-await": "off",
        "comma-dangle": [
            "error",
            "always-multiline"
        ],
        "strict": [
            "error",
            "global"
        ],
        "no-underscore-dangle": "off",
        "no-undef": "error",
        "class-methods-use-this": "off",
        "quotes": [
            "error",
            "single"
        ],
        "prefer-destructuring": [
            "error",
            {
                "object": true,
                "array": false
            }
        ],
        "no-unused-vars": [
            "error",
            {
                "argsIgnorePattern": "req|res|next|val"
            }
        ],
        "import/order": [
            "error",
            {
                "groups": [
                    "builtin",
                    "external",
                    "parent",
                    "sibling",
                    "index"
                ],
                "newlines-between": "always",
                "alphabetize": {
                    "order": "asc",
                    "caseInsensitive": true
                }
            }
        ]
    }
}